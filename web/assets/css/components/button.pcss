button,
.btn {
  /* Shared styles for all buttons */
  @apply rounded-md border py-2 px-4 text-sm font-medium shadow-sm;
  @apply flex items-center;

  /* Custom outline, colored instead of black. */
  @apply focus:outline-none focus:ring-2 focus:ring-accent-500 focus:ring-offset-2;

  /* Default button style, white by default. */
  @apply border-gray-300 bg-white text-gray-700 hover:bg-gray-50;

  /* Disabled buttons. The important (!) modifier is used, so that styled buttons cannot override this behaviour. */
  @apply disabled:!bg-neutral-100 disabled:!text-neutral-500;

  /* Icons inside a button are usually a SVG, a margin is automatically added. */
  svg {
    @apply mr-2;
  }
}

.btn--small {
  @apply px-3 text-xs;

  svg {
    @apply mr-1 h-4 w-4;
  }
}

.btn--primary {
  @apply border-transparent bg-accent-600 text-white hover:bg-accent-700;
}

.btn--danger {
  @apply border-transparent border-red-300 text-red-900 hover:bg-red-100 focus:ring-red-500;
}
